generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt //
  deletedAt DateTime? // <== Tambahkan ini
  Biodata   Biodata?
  UserRole  UserRole[]
}

model Biodata {
  id            Int       @id @default(autoincrement())
  name          String
  alamat        String?
  no_telp       String?
  kota          String?
  kode_pos      String?
  photo         String?
  tanggal_lahir DateTime?
  jenis_kelamin String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt //
  deletedAt     DateTime? // <== Tambahkan ini
  id_user       Int       @unique
  user          User      @relation(fields: [id_user], references: [id], onDelete: Cascade)
}

model UserRole {
  id        Int      @id @default(autoincrement())
  id_user   Int
  user      User     @relation(fields: [id_user], references: [id], onDelete: Cascade)
  id_role   Int
  role      Role     @relation(fields: [id_role], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Role {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @updatedAt
  users          UserRole[]
  RolePermission RolePermission[]
}

model Permission {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now()) @updatedAt
  roles     RolePermission[]
}

model RolePermission {
  id            Int        @id @default(autoincrement())
  id_role       Int
  id_permission Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  role          Role       @relation(fields: [id_role], references: [id], onDelete: Cascade)
  permission    Permission @relation(fields: [id_permission], references: [id], onDelete: Cascade)
}

//Aspek Perhitungan Harga Satuan Barang (ASB)
model Peraturan_Tahunan {
  id             Int               @id @default(autoincrement())
  tahun          Int               @unique
  peraturan      String
  kegiatan_asb       Kegiatan_ASB[]
  harga_referensi Harga_Referensi[]
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  deletedAt      DateTime? // for soft delete
}

model Kategori_Komponen {
  id        Int            @id @default(autoincrement())
  nama      String         @unique
  komponen_asb  Komponen_ASB[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  deletedAt DateTime?
}

model Satuan {
  id              Int               @id @default(autoincrement())
  nama            String            @unique
  komponen_asb    Komponen_ASB[]
  harga_referensi Harga_Referensi[]
  kegiatan_asb    Kegiatan_ASB[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?
}

model Harga_Referensi {
  id                   Int               @id @default(autoincrement())
  nama                 String
  id_satuan            Int
  satuan               Satuan            @relation(fields: [id_satuan], references: [id], onDelete: Cascade)
  harga                Int
  id_peraturan_tahunan Int
  peraturan_tahunan    Peraturan_Tahunan @relation(fields: [id_peraturan_tahunan], references: [id], onDelete: Cascade)
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  deletedAt            DateTime?
}

model Kegiatan_ASB {
  id                   Int               @id @default(autoincrement())
  kode                 String
  uraian               String
  id_satuan            Int
  satuan               Satuan            @relation(fields: [id_satuan], references: [id], onDelete: Cascade)
  id_peraturan_tahunan Int
  peraturan_tahunan    Peraturan_Tahunan @relation(fields: [id_peraturan_tahunan], references: [id], onDelete: Cascade)
  komponen_asb         Komponen_ASB[]
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  deletedAt            DateTime?
}

model Komponen_ASB {
  id                   Int               @id @default(autoincrement())
  id_kegiatan_asb      Int
  kegiatan_asb         Kegiatan_ASB      @relation(fields: [id_kegiatan_asb], references: [id], onDelete: Cascade)
  id_kategori_komponen Int
  kategori_komponen    Kategori_Komponen @relation(fields: [id_kategori_komponen], references: [id], onDelete: Cascade)
  uraian               String
  id_satuan            Int
  satuan               Satuan            @relation(fields: [id_satuan], references: [id], onDelete: Cascade)
  koefisien            Float
  hargaSatuan          Int
  jumlahHarga          Int
  urutan               Int
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt
  deletedAt            DateTime?
}
