generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  username  String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt //
  deletedAt DateTime? // <== Tambahkan ini
  Biodata   Biodata?
  UserRole  UserRole[]
}

model Biodata {
  id            Int       @id @default(autoincrement())
  name          String
  alamat        String?
  no_telp       String?
  kota          String?
  kode_pos      String?
  photo         String?
  tanggal_lahir DateTime?
  jenis_kelamin String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt //
  deletedAt     DateTime? // <== Tambahkan ini
  id_user       Int       @unique
  user          User      @relation(fields: [id_user], references: [id], onDelete: Cascade)
}

model UserRole {
  id        Int      @id @default(autoincrement())
  id_user   Int
  user      User     @relation(fields: [id_user], references: [id], onDelete: Cascade)
  id_role   Int
  role      Role     @relation(fields: [id_role], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Role {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now()) @updatedAt
  users          UserRole[]
  RolePermission RolePermission[]
}

model Permission {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @default(now()) @updatedAt
  roles     RolePermission[]
}

model RolePermission {
  id            Int        @id @default(autoincrement())
  id_role       Int
  id_permission Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  role          Role       @relation(fields: [id_role], references: [id], onDelete: Cascade)
  permission    Permission @relation(fields: [id_permission], references: [id], onDelete: Cascade)
}

//Aspek Perhitungan Harga Satuan Barang (ASB)

model Satuan {
  id           Int            @id @default(autoincrement())
  nama         String
  komponen_asb Komponen_ASB[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model Kelompok_ASB {
  id     Int     @id @default(autoincrement())
  kode   String?
  uraian String?

  kegiatan_asb    Kegiatan_ASB[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  SubKegiatan_ASB SubKegiatan_ASB[]
}

model Kegiatan_ASB {
  id               Int               @id @default(autoincrement())
  kode             String?
  uraian           String?
  sub_kegiatan_asb SubKegiatan_ASB[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  Komponen_ASB     Komponen_ASB[]

  kelompok_asb    Kelompok_ASB? @relation(fields: [id_kelompok_asb], references: [id], onDelete: Cascade)
  id_kelompok_asb Int?
}

model SubKegiatan_ASB {
  id              Int            @id @default(autoincrement())
  kode            String?
  uraian          String?
  id_kegiatan_asb Int
  komponen_asb    Komponen_ASB[]
  kegiatan_asb    Kegiatan_ASB   @relation(fields: [id_kegiatan_asb], references: [id], onDelete: Cascade)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @default(now()) @updatedAt
  deletedAt       DateTime?
  Kelompok_ASB    Kelompok_ASB?  @relation(fields: [kelompok_ASBId], references: [id])
  kelompok_ASBId  Int?
}

model itemKegiatanASB {
  id     Int     @id @default(autoincrement())
  kode   String?
  uraian String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now()) @updatedAt
  deletedAt      DateTime?
  kelompok_ASBId Int?
}

model Komponen_ASB {
  id                  Int             @id @default(autoincrement())
  id_kegiatan_asb     Int
  id_sub_kegiatan_asb Int
  sub_kegiatan_asb    SubKegiatan_ASB @relation(fields: [id_sub_kegiatan_asb], references: [id], onDelete: Cascade)
  kegiatan_asb        Kegiatan_ASB    @relation(fields: [id_kegiatan_asb], references: [id], onDelete: Cascade)
  uraian              String?
  id_satuan           Int
  satuan              Satuan          @relation(fields: [id_satuan], references: [id], onDelete: Cascade)
  koefisien           Float?
  harga_satuan        Decimal?
  jumlah_harga        Decimal?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  deletedAt           DateTime?
}
